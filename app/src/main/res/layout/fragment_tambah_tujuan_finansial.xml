<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.bottomSheet.TambahTujuanFinansialFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:background="@drawable/top_corner"
        android:visibility="gone">
        <Button
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/_5sdp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/background_tujuan_finansial">

            <TextView
                android:id="@+id/tv_tujuan_finansial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tujuan Finansial"
                android:textColor="@color/netral_800"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/poppins_semibold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <LinearLayout
                android:id="@+id/ll_tujuan_finansial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/tv_tujuan_finansial">

                <Button
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:text="Properti"
                    android:textSize="@dimen/_7sdp"/>

                <Button
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:text="Properti"
                    android:textSize="@dimen/_7sdp"/>

                <Button
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:text="Properti"
                    android:textSize="@dimen/_7sdp"/>

                <Button
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:text="Properti"
                    android:textSize="@dimen/_7sdp"/>

                <Button
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:text="Properti"
                    android:textSize="@dimen/_7sdp"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/poppins_semibold"
                android:textAllCaps="false"
                android:text="Terapkan"
                android:textColor="@color/netral_0"
                android:gravity="center"
                android:background="@drawable/button_primary"
                app:layout_constraintTop_toBottomOf="@id/ll_tujuan_finansial"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:background="@drawable/top_corner">
        <Button
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/_5sdp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/background_tujuan_finansial">

            <TextView
                android:id="@+id/tv_lainnya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lainnya"
                android:textAlignment="center"
                android:textColor="@color/netral_800"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/poppins_semibold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <LinearLayout
                android:id="@+id/ll_lainnya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/tv_lainnya">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/netral_800"
                    android:text="Nama Finansial"/>

                <EditText
                    android:id="@+id/et_nama_finansial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:fontFamily="@font/fpoppins_regular"
                    android:hint="Misal: Beli Mainan"
                    android:background="@drawable/login_text_field"
                    android:padding="@dimen/_10sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/netral_800"
                    android:text="Jumlah uang akan dikumpulkan"/>

                <EditText
                    android:id="@+id/et_jumlah_uang_kumpul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:fontFamily="@font/fpoppins_regular"
                    android:hint="Masukkan Nama"
                    android:background="@drawable/login_text_field"
                    android:padding="@dimen/_10sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/netral_800"
                    android:text="Target Uang Terkumpul"/>

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:fontFamily="@font/fpoppins_regular"
                    android:hint="Februari 2022"
                    android:background="@drawable/login_text_field"
                    android:padding="@dimen/_10sdp"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:fontFamily="@font/poppins_semibold"
                android:textAllCaps="false"
                android:text="Tambahkan"
                android:textColor="@color/netral_0"
                android:gravity="center"
                android:background="@drawable/button_primary"
                app:layout_constraintTop_toBottomOf="@id/ll_lainnya"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>